import java.util.Scanner;
class NPlusFor
{
	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		int n, sum =0;
		System.out.print("N을 입력하세요 :");
		n = sc.nextInt();

		if(n%2 == 0){
			for(int i = n; i <= n ; i++){
				sum += i;
				System.out.print("짝수의 합은 "+sum+ "입니다");
		}else{
			for(int i = n; i <= n ; i++){
				sum += i;
				System.out.print("홀수의 합은 "+sum+ "입니다");
			}
		}
	}
}
}